RewriteEngine On

# Rediriger toutes les requêtes vers index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Sécurité : empêcher l'accès aux fichiers sensibles
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

<Files "config">
    Order allow,deny
    Deny from all
</Files>

<Files "models">
    Order allow,deny
    Deny from all
</Files>

<Files "controllers">
    Order allow,deny
    Deny from all
</Files>